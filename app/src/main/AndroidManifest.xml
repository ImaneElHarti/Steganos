<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elharti.steganos">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Encoder" android:screenOrientation="portrait" />
        <activity android:name=".Decoder" android:screenOrientation="portrait"  />
        <activity android:name=".EncoderT" android:screenOrientation="portrait" />
        <activity android:name=".ResultatIntro" android:screenOrientation="portrait" />
        <activity android:name=".verificationMdp" android:screenOrientation="portrait"  />
        <activity android:name=".exractImage" android:screenOrientation="portrait"  />
        <activity android:name=".choice" android:screenOrientation="portrait" ></activity>
        <activity android:name=".aboutus" android:screenOrientation="portrait" ></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>
